{
  "name": "up-down-server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "db:gen:dev": "dotenv -e .env.development -- prisma generate",
    "db:push:dev": "dotenv -e .env.development -- prisma db push",
    "db:reset:dev": "dotenv -e .env.development -- prisma migrate reset",
    "db:seed:dev": "dotenv -e .env.development -- tsx prisma/seed.ts",
    "build": "tsc -p tsconfig.json && tsc-alias -p tsconfig.json",
    "start": "node dist/index.js",
    "db:gen": "prisma generate",
    "db:push:prod": "dotenv -e .env.production  -- prisma db push",
    "db:reset:prod": "dotenv -e .env.production -- prisma migrate reset",
    "db:seed:prod": "dotenv -e .env.production  -- tsx prisma/seed.ts",
    "migrate-deploy": "prisma migrate deploy",
    "lint": "eslint --ext .ts src",
    "format": "prettier --write \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepare": "husky",
    "redis:reset": "tsx scripts/redis-reset.ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.6.5",
  "dependencies": {
    "@faker-js/faker": "^9.7.0",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.0.1",
    "@fastify/csrf-protection": "^7.1.0",
    "@fastify/helmet": "^13.0.1",
    "@fastify/rate-limit": "^10.2.2",
    "@fastify/redis": "^7.0.2",
    "@fastify/schedule": "^6.0.0",
    "@fastify/sensible": "^6.0.3",
    "@fastify/swagger": "^9.5.0",
    "@fastify/swagger-ui": "^5.2.2",
    "@prisma/client": "^6.7.0",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "envalid": "^8.0.0",
    "fastify": "^5.3.2",
    "fastify-plugin": "^5.0.1",
    "fastify-type-provider-zod": "^4.0.2",
    "husky": "^9.1.7",
    "ioredis": "^5.6.1",
    "light-my-request": "^6.6.0",
    "pino": "^9.6.0",
    "pino-loki": "^2.5.0",
    "pino-pretty": "^13.0.0",
    "prisma": "^6.7.0",
    "toad-scheduler": "^3.0.1",
    "tsc-alias": "^1.8.16",
    "zod": "^3.24.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.0",
    "@types/node": "^22.14.1",
    "@vitest/coverage-v8": "^3.1.1",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.25.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lint-staged": "^15.5.1",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.3",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.30.1",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.1"
  },
  "engines": {
    "node": ">=22"
  }
}
